@model IEnumerable<CAR.Core.Domain.Car>

@{
    ViewData["Title"] = "Cars";
}

<h1 class="page-title">Cars List</h1>

<div class="table-card">

    <div class="table-header">
        <span>All Cars</span>
        <a asp-action="Create" class="btn btn-primary">Create</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <table class="table table-dark-custom mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr onclick="window.location='@Url.Action("Details", "Cars", new { id = car.Id })'">
                        <td class="id-col">@car.Id</td>
                        <td>@car.Make</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>@car.Color</td>
                        <td class="car-price">€@car.Price.ToString("N2")</td>
                        <td class="actions">
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-details-custom btn-sm">Details</a>
                            <a asp-action="Update" asp-route-id="@car.Id" class="btn btn-update-custom btn-sm">Update</a>
                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-data">No cars found in the database.</p>
    }

</div>

<div class="mt-3">
    <a href="/" class="btn btn-secondary">Back</a>
</div>
